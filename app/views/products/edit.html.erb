<h1>Edit Products</h1>
<form action="/products/<%= @product.id %>" method="post">
  <input type="hidden" name ="_method" value="patch">
  <div>
    Name: <input type="text" name="name" value="<%= @product.name %>" />
  </div>
  <div>
    price: <input type="text" name="price" value="<%= @product.price %>" />
  </div>
  <div>
    Description: <input type="text" name="description" value="<%= @product.description %>" />
  </div>
  <div>
    In Stock: <input type="text" name="instock" value="<%= @product.instock %>" />
  </div>
  <div>
    supplier id: <input type="text" name="supplier_id" value="<%= @product.supplier_id %>" />
  </div>
  
  <div>
    Choose a user:
    <select name="user_id">
      <% @users.each do |user| %>
        <option value="<%= user.id %>"><%= user.name %></option>
      <% end %>
    </select>
  </div>
  <input type="submit" name="" value="Update product" />
</form>